    "BlockEmptyUserAgent": false,
    "AllowedAcceptHeaders": [
      "application/json",
      "*/*"
    ]
  },
  "ApiKey": {
    "HeaderName": "X-App-Key",
    "ApiKeyValue": "YOUR_SUPER_SECRET_API_KEY"
  }
